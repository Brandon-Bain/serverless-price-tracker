{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "alwaysStrict": true,
    "strict": true,
    "strictNullChecks": true,
    "allowUnreachableCode": false,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true
  },
  "exclude": ["node_modules/**/*"],
  "include": ["src/**/*"]
}
